        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/bg_galaxy</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- Spinner -->
        <item name="spinner_text_color">#FFFFFF</item>
